{
	"manifest_version":1,
	"type":"WebApp",
	"meta":{
		"name":"GW2 TP Watcher",
		"version":"1.0.0",
		"minimum-overwolf-version":"0.77.10",
		"author":"DJ TpWatcher",
		"icon":"IconMouseOver.png",
		"icon_gray":"IconMouseNormal.png",
		"description":"GW2 TP Watcher keeps tracks of the item prices for you while you can enjoy playing. Add your favourite items and watch when the prices are just right to buy and sell. Prices are taken from the official GW2 API."
	},
	"data": {
		"start_window":"MainWindow",
		"windows":{
			"MainWindow":{
					"file":"Files/index.html",
					"transparent":false,
					"resizable":true,
					"size":{"width":368, "height":340},
					"min_size":{"width":368, "height":196}
		
				},
			"SubWindow":{
					"file":"Files/searchWindow.html",
					"transparent":false,
					"resizable":true,
					"size":{"width":368, "height":368},
					"min_size":{"width":368, "height":368}
				},
			"HelpWindow":{
					"file":"Files/helpWindow.html",
					"transparent":false,
					"resizable":true,
					"size":{"width":368, "height":368},
					"min_size":{"width":368, "height":368}
				}
		}
	}
}